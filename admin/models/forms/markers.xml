<?xml version="1.0" encoding="utf-8" ?>
<form>
	<fields>
		<fieldset name="base">
			<field name="maps_id" type="hidden" class="validate-numeric" />
			<field name="marker_id" type="hidden" class="validate-numeric" />
			<field name="ordering" type="hidden" class="validate-numeric" />
			<field name="marker_name" type="text" class="inputbox" required="true" label="COM_MAPS_FIELD_MARKER_NAME_LABEL" description="COM_MAPS_FIELD_MAKRER_NAME_DESC" />
			<field name="marker_alias" type="text" class="inputbox" required="true" label="COM_MAPS_FIELD_MARKER_ALIAS_LABEL" description="COM_MAPS_FIELD_MARKER_ALIAS_DESC" />
			<field name="marker_lng" type="text" class="inputbox" required="true" label="COM_MAPS_FIELD_MARKER_LNG_LABEL" description="COM_MAPS_FIELD_MARKER_LNG_DESC" />
			<field name="marker_lat" type="text" class="inputbox" required="true" label="COM_MAPS_FIELD_MARKER_LAT_LABEL" description="COM_MAPS_FIELD_MARKER_LAT_DESC" />
		</fieldset>
		<fieldset name="editor">
			<field name="marker_description" type="editor" class="inputbox" filter="safehtml" buttons="true" label="COM_MAPS_FIELD_MARKER_DESCRIPTION_LABEL" description="COM_MAPS_FIELD_MARKER_DESCRIPTION_DESC" />
		</fieldset>
		<fieldset name="options">
			<field name="maps_id" type="sql" default="0" label="Map" description="The map on which you want to place the marker." query="SELECT `maps_id`, `maps_name` FROM `#__maps` ORDER BY `ordering`" key_field="maps_id" value_field="maps_name" />
			<field name="published" type="radio" default="1" label="COM_MAPS_FIELD_PUBLISHED_LABEL" description="COM_MAPS_FIELD_PUBLISHED_DESC">
				<option value="1">COM_MAPS_OPTION_VALUE_BOOLEAN_TRUE</option>
				<option value="2">COM_MAPS_OPTION_VALUE_BOOLEAN_FALSE</option>
			</field>
			<field name="access" type="accesslevel" default="1" label="COM_MAPS_FIELD_ACCESS_LABEL" description="COM_MAPS_FIELD_ACCESS_DESC" />
		</fieldset>
	</fields>
	<fields name="params">
		<fieldset name="params">
			<field name="map_width" type="hidden" default="640" label="" description="" />
			<field name="map_height" type="hidden" default="260" label="" description="" />
			<field name="center_lat" type="hidden" default="20.008834970581525" label="" description=""  />
			<field name="center_lng" type="hidden" default="-35.67246318304168" label="" description=""  />
			<field name="zoom" type="hidden" default="2"  />
		</fieldset>
	</fields>
</form>